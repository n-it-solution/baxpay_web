{% extends 'base.html.twig' %}

{% trans_default_domain 'homepage' %}

{% block title %}{{ 'home.title.register'|trans }}{% endblock %}

{% block body %}

    <main class="container-fluid w-100" style="min-height: 100vh;" role="main">
        <div class="row">
            <div class="col-lg-6 d-flex flex-column justify-content-center align-items-center bg-white">
                <a class="u-login-form py-3 mb-auto" href="/">
                    <img class="img-fluid" src="{{ asset('assets/front/') }}img/logo.png" width="70" alt="{{ 'home.title.home'|trans }}">
                </a>
                {#<div class="u-login-form" style="height: 130px; padding-top: 140px;">
                    <img class="img-fluid" src="{{ asset('assets/front/') }}img/logo.png" width="70"  alt="Stream Dashboard UI Kit" >
                </div>#}
                <div class="u-login-form" style="padding-bottom: 20%;">
                    <form class="mb-3" action="" method="post">
                        <div class="mb-3">
                            <h1 class="h2">{{ 'home.auth.register.title'|trans }}</h1>
                            <p class="small">{{ 'home.auth.register.description'|trans }}</p>
                        </div>
                        <p class="text-danger">{{ error }}</p>
                        <div class="form-row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    {#<label for="First Name">First Name</label>#}
                                    <input id="First Name" required class="form-control" value="{{ app.request.get('First_Name') }}" name="First Name" type="text" placeholder="{{ 'home.auth.register.firstname'|trans }}">

                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    {#<label for="Last Name">Last Name</label>#}
                                    <input id="Last Name" required class="form-control" value="{{ app.request.get('Last_Name') }}" name="Last Name" type="text" placeholder="{{ 'home.auth.register.lastname'|trans }}">
                                </div>
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            {#<label for="email">Email</label>#}
                            <input id="email" required class="form-control" value="{{ app.request.get('email') }}" name="email" type="email" placeholder="{{ 'home.auth.register.email'|trans }}">
                        </div>
                        <div class="form-group mb-3">
                            {#<label for="phone">Phone number</label>#}
                            <input id="phone" required class="form-control" value="{{ app.request.get('phone') }}" name="phone" type="number" placeholder="{{ 'home.auth.register.phonenumber'|trans }}">
                        </div>
                        <div class="form-row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    {#<label for="gender">Gender</label>#}
                                    <select class="custom-select" id="gender" name="Gender">
                                        <option value="m" {% if app.request.get('Gender') == 'm' %}selected{% endif %}>{{ 'home.auth.register.male'|trans }}</option>
                                        <option value="f" {% if app.request.get('Gender') == 'f' %}selected{% endif %}>{{ 'home.auth.register.female'|trans }}</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    {#<label for="account-type">Account type</label>#}
                                    <select class="custom-select" id="account-type" name="Account-type">
                                        <option value="p" {% if app.request.get('Account-type') == 'p' %}selected{% endif %}>{{ 'home.auth.register.personal'|trans }}</option>
                                        <option value="c" {% if app.request.get('Account-type') == 'c' %}selected{% endif %}>{{ 'home.auth.register.company'|trans }}</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    {#<label for="password">Password</label>#}
                                    <input id="password" required class="form-control" name="password" type="password" placeholder="{{ 'home.auth.register.password'|trans }}">
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    {#<label for="confirmPassword">Confirm password</label>#}
                                    <input id="confirmPassword" required class="form-control" name="confirmPassword" type="password" placeholder="{{ 'home.auth.register.passwordagain'|trans }}">
                                </div>
                            </div>
                        </div>

                        <div class="custom-control custom-checkbox mb-1" style="padding-top: 7px; padding-bottom: 7px;">
                            <input required id="agree" class="custom-control-input" name="agree" type="checkbox">
                            <label class="d-block custom-control-label" for="agree">{{ 'home.auth.register.agree'|trans }}<a href="/terms">{{ 'home.auth.register.terms'|trans }}</a></label>
                        </div>

                        <button class="btn btn-primary btn-block submit-btn" disabled type="submit">{{ 'home.auth.register.signup'|trans }}</button>
                    </form>

                    <p class="small">
                        {{ 'home.auth.register.haveaccount'|trans }} <a href="{{ path('fos_user_security_login') }}">{{ 'home.auth.register.signin'|trans }}</a>
                    </p>
                </div>

            </div>

            <div class="col-lg-6 d-flex flex-column justify-content-center align-items-center bg-white">
                <iframe src="{{ path('slider') }}" frameborder="0" style="width: 100%; height: 100%"></iframe>
            </div>
        </div>

    </main>

{% endblock %}
{% block javascripts %}
    <script>
        $('#agree').change(function () {
            if($(this).is(":checked")) {
                $('.submit-btn').removeAttr('disabled');
            }else {
                $('.submit-btn').attr('disabled',true)
            }
        })
    </script>
{% endblock %}